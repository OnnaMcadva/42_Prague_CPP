# Text styles
BOLD        = "\033[1m"
UNDERLINE   = "\033[4m"
BLINK       = "\033[5m"

NAME = Harl2.0
CC = c++
CPP_FLAGS = -Wall -Werror -Wextra -std=c++98
RM = rm -rf

FILES =	Harl \
		main \

SRCS = $(addsuffix .cpp, $(FILES))

HDRS = $(wildcard *.hpp)

all: $(NAME)

